<Window x:Class="Figures.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Grid.ColumnSpan="2" Background="DodgerBlue">
            <Label Content="{DynamicResource Header}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="#fff"></Label>
        </Border>
        
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TreeView x:Name="FiguresThreeView">
                <Label Content="{DynamicResource Figures}"></Label>
                <TreeViewItem x:Name="CirclesTreeViewItem" Header="{DynamicResource Circles}" MouseDoubleClick="TreeViewItem_OnMouseDoubleClick">
                </TreeViewItem>
            
                <TreeViewItem x:Name="RectanglesTreeViewItem" Header="{DynamicResource Rectangles}" MouseDoubleClick="TreeViewItem_OnMouseDoubleClick">
                </TreeViewItem>
            
                <TreeViewItem x:Name="TrianglesTreeViewItem" Header="{DynamicResource Triangles}" MouseDoubleClick="TreeViewItem_OnMouseDoubleClick">
                </TreeViewItem>
            </TreeView>

            <Button x:Name="StopOrContinueButton" Content="{DynamicResource StopOrContinue}" Click="StopOrContinueButton_OnClick"></Button>
            <Menu>
                <MenuItem Header="{DynamicResource Language}">
                    <MenuItem x:Name="EnglishMenuItem" Header="English" Click="ChangeLanguageMenuItem_OnClick" Tag="en-US"></MenuItem>
                    <MenuItem x:Name="UkrainianMenuItem" Header="Ukrainian" Click="ChangeLanguageMenuItem_OnClick" Tag="uk-UA"></MenuItem>
                </MenuItem>
            </Menu>
            
            <ComboBox>
                <ComboBoxItem x:Name="JsonPickerComboBoxItem" Selected="JsonPickerMenuItem_OnClick" IsSelected="True">
                    Json
                </ComboBoxItem>
                <ComboBoxItem x:Name="XmlPickerComboBoxItem" Selected="XmlPickerMenuItem_OnClick">
                    Xml
                </ComboBoxItem>
                <ComboBoxItem x:Name="BinaryPickerComboBoxItem" Selected="BinaryPickerMenuItem_OnClick">
                    Bin
                </ComboBoxItem>
            </ComboBox>
            
            <Button x:Name="SaveFiguresButton" Content="{DynamicResource Save}" Click="SaveFiguresButton_OnClick"></Button>
            <Button x:Name="LoadFiguresButton" Content="{DynamicResource Load}" Click="LoadFiguresButton_OnClick"></Button>
            
            <Separator></Separator>
            
            <Button x:Name="ClearFiguresButton" Content="{DynamicResource Clear}" Click="ClearFiguresButton_OnClick"></Button>
        </StackPanel>
        
        <Canvas x:Name="MainCanvas" Grid.Row="1" Grid.Column="1" Focusable="True">
        </Canvas>
    </Grid>
</Window>
